@model OrionTM_Web.Models.Modelo

@{
    ViewData["Title"] = "Details";
}

<h2>Modelos > Detalhes</h2>

<div class="col-md-6">
    <hr />

    <table class="table">
        <tr>
            <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>:
                        <input asp-for="Nome" class="form-control" readonly />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>:
                        <input asp-for="Descricao" class="form-control" readonly />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </th>


            <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6">

                <div class="form-group">
                        <label asp-for="Fabricante" class="control-label"></label>:
                    <input asp-for="Fabricante" class="form-control" readonly />
                        <span asp-validation-for="Fabricante" class="text-danger"></span>
                </div>
                <div class="form-group">
                        <label asp-for="SistemaOperacional" class="control-label"></label>:
                    <input asp-for="SistemaOperacional" class="form-control" readonly />
                        <span asp-validation-for="SistemaOperacional" class="text-danger"></span>
                </div>

            </th>
        </tr>

    </table>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ModeloId" class="btn btn-primary btn-sm">Editar</a>
    <a asp-action="Index" class="btn btn-secondary btn-sm">Voltar</a>
</div>