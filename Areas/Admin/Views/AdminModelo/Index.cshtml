@model ReflectionIT.Mvc.Paging.PagingList<OrionTM_Web.Models.Modelo>

@{    ViewData["Title"] = "Modelos";}



<form method="get" class="form-inline">

    <div>
        <dl class="row">

            <dt class="col-sm-3">
                <h3>Modelos</h3>
            </dt>


            <dt class="col-sm-2">
                <input name="filter" class="form-control" placeholder="Nome" value="@Model.RouteValue["filter"]" />
            </dt>

            <dt class="col-sm-1">
                <button type="submit" class="btn btn-info ">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>Procurar
                </button>
            </dt>
            <dt class="col-sm-1">
                <th class="col-sm-4">
                    <a class="btn btn-primary " asp-action="Create">Incluir</a>
                </th>
             </dt>
            
        </dl>
    </div>

</form>

<hr />

<table class="table table-striped ">
    <thead>
        <tr>
            <th >
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fabricante)
            </th>
            <th>
                Sist. Oper.
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2" >
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
                    <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                @Html.DisplayFor(modelItem => item.Fabricante)
            </td>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                @Html.DisplayFor(modelItem => item.SistemaOperacional)
            </td>

                <td  >
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.ModeloId">Detalhes</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ModeloId">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ModeloId">Excluir</a>
                </td>
        </tr>
}
    </tbody>
</table >
<table class="table ">
    <tr>
        <td class="col-xs-10 col-sm-10 col-md-10 col-lg-10"> <vc:pager paging-list="@Model"></vc:pager> </td>
        <td> <h5>Total: @Model.TotalRecordCount</h5> </td>
    </tr>

</table>