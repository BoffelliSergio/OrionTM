@model OrionTM_Web.Models.Link

@{
    ViewData["Title"] = "Links";
}



<h2>Links > Editar</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LinkId" />



    <table class="table">
         <tr>
            <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>:
                    <input asp-for="Nome" class="form-control" readonly/>
                 <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </th>

            <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                <div class="form-group">
                    <label asp-for="Capacidade" class="control-label"></label>:
                 <input asp-for="Capacidade" class="form-control" />
                 <span asp-validation-for="Capacidade" class="text-danger"></span>
                 </div>
                    </th>
                </tr>
            </table>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-warning btn-sm" />
                <a asp-action="Index" class="btn btn-secondary btn-sm">Voltar</a>
            </div>
           
        </form>
    </div>
</div>

