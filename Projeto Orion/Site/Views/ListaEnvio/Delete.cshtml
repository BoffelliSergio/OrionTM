@model OrionTM_Web.Models.ListaEnvio


@using Microsoft.AspNetCore.Mvc.Localization

@using Microsoft.Extensions.Localization

@inject IViewLocalizer Localizer

@*@Localizer["Senha"]*@


@{
    ViewData["Title"] = @Localizer["TITULO"];
}

<h2>@Localizer["TITULO_1"]</h2>

<hr />
<div class="col-md-4">

    <table class="table">
        <tr>
            <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                <div class="form-group">
                    @Localizer["GRD_NOME"]:
                    <input asp-for="Nome" class="form-control" readonly />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </th>

            <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                <div class="form-group">
                    @Localizer["GRD_DESC"]:
                    <input asp-for="Descricao" class="form-control" readonly />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </th>
        </tr>
    </table>

   
</div>

<h4 class="modal-title">@Localizer["TITULO_3"]</h4>
<div class="modal-body">

    @Localizer["TITULO_2"]: <strong>@Html.DisplayFor(model => model.Nome) </strong>?
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <input class="btn btn-primary btn-sm btn-danger" type="submit" value="@Localizer["BTN_EXCLUIR"]" />
        <a asp-action="Index" class="btn btn-secondary btn-sm">@Localizer["BTN_VOLTAR"]</a>
    </div>
}

