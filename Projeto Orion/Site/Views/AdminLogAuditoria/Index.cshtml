@model ReflectionIT.Mvc.Paging.PagingList<OrionTM_Web.Models.LogAuditoria>
@addTagHelper *, ReflectionIT.Mvc.Paging


@using Microsoft.AspNetCore.Mvc.Localization

@using Microsoft.Extensions.Localization

@inject IViewLocalizer Localizer

@*@Localizer["Senha"]*@


@{
    ViewData["Title"] = @Localizer["TITULO"];
}


<form method="get" class="form-inline">

    <div>

        <dl class="row">

            <dt class="col-sm-2">
                 <h3>Auditoria</h3>
             </dt>
      
            <dt class="col-sm-2">
                <input name="filter" class="form-control" placeholder="Modulo" value="@Model.RouteValue["filter"]" />
            </dt>

            <dt class="col-sm-1">
                <button type="submit" class="btn btn-info ">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> @Localizer["BTN_PROCURAR"]
                </button>
             </dt>

        </dl>
    </div>

</form>

<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Localizer["GRD_MODULO"]
            </th>
            <th>
                @Localizer["GRD_DETALHE"]
            </th>
            <th>
                @Localizer["GRD_DATA"]
            </th>
            <th>
                @Localizer["GRD_USUARIO"]
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @Html.DisplayFor(modelItem => item.Modulo)
                </td>
                <td class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                    @Html.DisplayFor(modelItem => item.Detalhe)
                </td>

                <td class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                    @Html.DisplayFor(modelItem => item.Usuario)
                </td>

            </tr>
        }
    </tbody>
</table>

<table class="table ">
    <tr>
        <td class="col-xs-10 col-sm-10 col-md-10 col-lg-10"> <vc:pager paging-list="@Model"></vc:pager> </td>
        <td> <h5>Total: @Model.TotalRecordCount</h5> </td>
    </tr>

</table>

<script language='javascript'>

    function teste() {
        window.location.reload();
    }

    setTimeout(teste, 10000);

</script>