@model OrionTM_Web.Models.Terminal

@using Microsoft.AspNetCore.Mvc.Localization

@using Microsoft.Extensions.Localization

@inject IViewLocalizer Localizer

@*@Localizer["Senha"]*@

@{
    ViewData["Title"] = @Localizer["TITULO"];
}

    <h2>@Localizer["TITULO"]</h2>

   

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="TerminalId" />

        <table class="table">
            <tr>
                <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group">
                                @Localizer["GRD_CODIGO"]
                        <input asp-for="Codigo" class="form-control" readonly/>
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                                @Localizer["GRD_MODELO"]
                        <select asp-for="ModeloId" class="form-control" asp-items="ViewBag.ModeloId"></select>
                        <span asp-validation-for="ModeloId" class="text-danger"></span>
                        </div>
                    <div class="form-group">
                                @Localizer["GRD_LOCAL"]
                        <select asp-for="LocalId" class="form-control" asp-items="ViewBag.LocalId"></select>
                        <span asp-validation-for="LocalId" class="text-danger"></span>
                    </div>
                </th>
                <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-group">
                                @Localizer["GRD_IP"]
                        <input asp-for="IP" class="form-control" />
                        <span asp-validation-for="IP" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                                @Localizer["GRD_DNS"]
                        <input asp-for="DNS" class="form-control" />
                        <span asp-validation-for="DNS" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                                @Localizer["GRD_GATEWAY"]
                        <input asp-for="DefaultGateway" class="form-control" />
                        <span asp-validation-for="DefaultGateway" class="text-danger"></span>
                    </div>
                </th>
            </tr>
        </table>

            <div class="form-group">
                    <input type="submit" value="  @Localizer["BTN_SALVAR"]" class="btn btn-warning btn-sm" />
                    <a asp-action="Index" class="btn btn-secondary btn-sm">  @Localizer["BTN_VOLTAR"]</a>
            </div>
        </form>
    </div>
</div>

