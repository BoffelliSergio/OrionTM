@model OrionTM_Web.Models.Pacote

@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer
@*@Localizer["Senha"]*@

<h4>@Localizer["TITULO"]</h4>

<form asp-controller="AdminPacote" asp-action="Create" method="post">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <table class="table">
    <tr >

        <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                  
                <div class="form-group">
                    @Localizer["GRD_NOME"]
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @Localizer["GRD_DESCRICAO"]
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

             </th>

        <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6">

                <div class="form-group">
                    @Localizer["GRD_VERSAO"]
                    <input asp-for="Versao" class="form-control" />
                    <span asp-validation-for="Versao" class="text-danger"></span>
                </div>
                              
                <br />

                <div class="form-group">
                    @Localizer["GRD_PRODUCAO"]
                    <input type="checkbox" asp-for="Prod"  />
                    <span asp-validation-for="Prod" class="text-danger"></span>
                </div>

                <br />
                <div class="form-gorup">
                    <input type="submit" class="btn btn-success" value="@Localizer["BTN_SALVAR"]" />
                    <a asp-action="Index" class="btn btn-secondary ">@Localizer["BTN_VOLTAR"]</a>
                </div>
        </th>
        
     </tr>
    </table>
</form>