                        <label><h5>@Localizer["DO_PACOTE"]</h5></label>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div>
                        <h6>@Localizer["INST_IMEDIATA"]</h6>
                    </div>
                </td>
            </tr>*@
        </table>
        <table>
            <div class="row">
                <div class="col-md-2 offset-md-10">
                    <button type="submit" class="btn btn-warning  btn-sm"><h6>@Localizer["BTN_EXECUTAR"]</h6></button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm"><h6>@Localizer["BTN_VOLTAR"]</h6></a>
                </div>
            </div>
        </table>
    </form>
</div>
