@model ComandosEnvioViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject IViewLocalizer Localizer

@*@Localizer["Senha"]*@


<div class="container">
    <form asp-action="EnvioPacotesPorLista">
        <h3>@Localizer["TITULO"]</h3>
        <table class="table">

            <tr>
                <td>
                    <div><h5>@Localizer["SEL_PACOTE"]</h5></div>
                    <div>
                        <select name="Pacotes_from" id="multiselect" class="form-control" size="5">
                            @foreach (var item in Model.Pacote)
                            {
                                <option value="@item.PacoteId">@item.Nome</option>
                            }
                        </select>
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    <div><h5>@Localizer["SEL_LISTA"]</h5></div>
                    <div>
                        <select name="Lista_from" id="multiselect" class="form-control" size="5" multiple="multiple">
                            @foreach (var item in Model.ListaEnvio)
                            {
                                <option value="@item.ListaEnvioId">@item.Nome</option>
                            }
                        </select>
                    </div>
                </td>
            </tr>
