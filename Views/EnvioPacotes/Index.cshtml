@using ReflectionIT.Mvc.Paging
@addTagHelper *, ReflectionIT.Mvc.Paging
@model ReflectionIT.Mvc.Paging.PagingList<OrionTM_Web.Models.FilaTasks>


@{
    ViewData["Title"] = "Envio Pacotes";
}

<form method="get" class="form-inline">

    <div>
        <dl class="row">
            <dt class="col-sm-3">
                <h4>Download de Pacotes</h4>
            </dt>

            <dt class="col-sm-2">
                <input name="filter" class="form-control" placeholder="TerminalId" value="@Model.RouteValue["filter"]" />
            </dt>

            <div class="col-sm-1">
                <img src="~/images/Offline.png" />
                <input type="checkbox" checked />
            </div>

            <div class="col-sm-1">
                <img src="~/images/Online.png" />
                <input type="checkbox" checked />
            </div>

            <div class="col-sm-1">
                <img src="~/images/Novo Lote.png" />
                <input type="checkbox" checked />
            </div>

            <dt class="col-sm-1">
                <button type="submit" class="btn btn-info ">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>Procurar
                </button>
            </dt>
            
        </dl>
    </div>

</form>

<hr />

<table >
    <tr>
        <td>
            <a class="btn btn-primary btn-sm" asp-action="EnvioPacotesPorLista">Download Por Lista </a>
            <a class="btn btn-warning btn-sm" asp-action="EnvioPacotesPorLocais">Download por Localidade</a>
            <a class="btn btn-danger btn-sm" asp-action="EnvioPacotesPorTerminais">Download por Terminal</a>
        </td>
       
    </tr>
</table>

<hr />
<table class="table table-striped ">
    <thead>
        <tr>
           
            <th>
               Terminal
            </th>
            <th>
                Pacote
            </th>
            <th>
                Descrição
            </th>
            <th>
                Versão
            </th>
            <th>
                Data
            </th>
            <th>
                Status
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @Html.DisplayFor(modelItem => item.Terminal.Codigo)
                </td>
               <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @Html.DisplayFor(modelItem => item.Pacote.Nome)
                </td>
                <td class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                    @Html.DisplayFor(modelItem => item.Pacote.Descricao)
                </td>
                <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                    @Html.DisplayFor(modelItem => item.Pacote.Versao)
                </td>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @Html.DisplayFor(modelItem => item.DtAtualizacao)
                </td>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                   
                    @if (item.StatusId == 0)
                    {
                        <img src="~/images/Novo Lote.png">
                    }

                    @if (item.StatusId == 2)
                    {
                        <img src="~/images/Novo Lote.png">
                    }

                     @if (item.StatusId == 5)
                    {
                        <img src="~/images/Offline.png" >
                    }

                    @if (item.StatusId == 6)
                    {
                        <img src="~/images/Online.png" >
                    }

                </td>

            </tr>

        }
    </tbody>
</table>

<table class="table ">
    <tr>
        <td class="col-xs-10 col-sm-10 col-md-10 col-lg-10"> <vc:pager paging-list="@Model"></vc:pager> </td>
        <td> <h5>Total: @Model.TotalRecordCount</h5> </td>
    </tr>

</table>

<script language='javascript'>

    function teste() {
        window.location.reload();
    }

    setTimeout(teste, 10000);

</script>