@model ComandosEnvioViewModel


<div class="container">
    <form asp-action="ResetPorTerminais">
         <h3>Resetar por Terminais</h3>
        <table class="table">
            <tr>
                <td>
                    <div><h5>Selecione o Tipo de Reset</h5></div>
                    <div>
                        <select name="Resets_from" id="multiselect" class="form-control" size="2" >
                            
                            <option value="0">Shutdown</option>
                            <option value="1">Por Aplicativo</option>

                        </select>
                    </div>
                </td>
             <tr>
                <td>
                    <div><h5>Selecione os Terminais</h5></div>
                    <div>
                        <select name="terminais_from" id="multiselect" class="form-control" size="10" multiple="multiple">
                            @foreach (var item in Model.Terminais)
                            {
                                <option value="@item.TerminalId">@item.Codigo</option>
                            }
                        </select>
                    </div>
                </td>
            </tr>
        </table>
        <table>
            <div class="row">
                <div class="col-md-2 offset-md-10">
                    <button type="submit" class="btn btn-warning  btn-sm">Executar</button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">Voltar</a>
                </div>
            </div>
        </table>
    </form>
</div>
