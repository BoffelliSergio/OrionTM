@model ComandosEnvioViewModel
@using Microsoft.AspNetCore.Mvc.Localization

@using Microsoft.Extensions.Localization

@inject IViewLocalizer Localizer

@*@Localizer["Senha"]*@



<div class="container">
    <form asp-action="ResetPorLista">
        <h3>@Localizer["TITULO"]</h3>
        <table class="table">

            <tr>
                <td>
                    <div><h5>@Localizer["SEL_COMANDO"]</h5></div>
                    <div>
                        <select name="Resets_from" id="multiselect" class="form-control" size="2">
                            <option value="0">Shutdown</option>
                            <option value="1">Por Aplicativo</option>
                        </select>
                    </div>
                </td>
            <tr>

            <tr>
                <td>
                    <div><h5>@Localizer["SEL_TERMINAIS"]</h5></div>
                    <div>
                        <select name="Lista_from" id="multiselect" class="form-control" size="10" multiple="multiple">
                            @foreach (var item in Model.ListaEnvio)
                            {
                                <option value="@item.ListaEnvioId">@item.Nome</option>
                            }
                        </select>
                    </div>
                </td>
            </tr>
        </table>
        <table>
            <div class="row">
                <div class="col-md-2 offset-md-10">
                    <button type="submit" class="btn btn-warning  btn-sm">@Localizer["BTN_EXECUTAR"]</button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">@Localizer["BTN_VOLTAR"]</a>
                </div>
            </div>
        </table>
    </form>
</div>
