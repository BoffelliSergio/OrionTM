@model ReflectionIT.Mvc.Paging.PagingList<OrionTM_Web.Models.Log>


@using Microsoft.AspNetCore.Mvc.Localization

@using Microsoft.Extensions.Localization

@inject IViewLocalizer Localizer

@*@Localizer["Senha"]*@


@{
    ViewData["Title"] = @Localizer["TITULO"];
}


<form method="get" class="form-inline">

    <div>
        <dl class="row">

            <dt class="col-sm-3">
                <h3>@Localizer["TITULO"]</h3>
            </dt>


            <dt class="col-sm-2">
                <input name="filter" class="form-control" placeholder="Nome" value="@Model.RouteValue["filter"]" />
            </dt>

            <dt class="col-sm-1">
                <button type="submit" class="btn btn-info ">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>@Localizer["BTN_PROCURAR"]
                </button>
            </dt>
            <dt class="col-sm-1">
                <th class="col-sm-4">
                    <a class="btn btn-primary " asp-action="Create">@Localizer["BTN_INCLUIR"]</a>
                </th>
             </dt>
           
        </dl>
    </div>

</form>

<hr />

<table class="table table-striped ">
    <thead>
        <tr>
            <th >
                @Localizer["GRD_NOME"]
            </th>
            <th >
                @Localizer["GRD_DESCRICAO"]
            </th>
            <th>
                @Localizer["GRD_CAMINHO"]
            </th>
            <th>
                @Localizer["GRD_TIPO"]
            </th>
            <th>
                @Localizer["GRD_MASCARA"]
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2" >
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                @Html.DisplayFor(modelItem => item.Caminho)
            </td>

                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @Html.DisplayFor(modelItem => item.TipoArquivo)
                </td>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @Html.DisplayFor(modelItem => item.DataMascara)
                </td>







                <td  >
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.LogId">@Localizer["BTN_EDITAR"]</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.LogId">@Localizer["BTN_EXCLUIR"]</a>
                </td>
        </tr>
}
    </tbody>
</table >
<table class="table ">
    <tr>
        <td class="col-xs-10 col-sm-10 col-md-10 col-lg-10"> <vc:pager paging-list="@Model"></vc:pager> </td>
        <td> <h5>Total: @Model.TotalRecordCount</h5> </td>
    </tr>

</table>