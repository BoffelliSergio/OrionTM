@model OrionTM_Web.Models.Log

@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer
@*@Localizer["Senha"]*@

@{
    ViewData["Title"] = @Localizer["TITULO"];
}

<h2>@Localizer["TITULO"]</h2>

<div>
    <h3 style="color: red;">@Html.ValidationMessage("Aviso")</h3>
</div>

<hr />
<div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <table class="table">
            <tr>


                <th class="col-xs-7 col-sm-7 col-md-7 col-lg-7">

                <div class="form-group">
                        @Localizer["GRD_NOME"]
                     <input asp-for="Nome" class="form-control" />
                     <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                             
                <br />

                <div class="form-group">
                        @Localizer["GRD_DESCRICAO"]
                     <input asp-for="Descricao" class="form-control" />
                     <span asp-validation-for="Descricao" class="text-danger"></span>
                   
                </div>

                    <br />

                <div class="form-group">
                        @Localizer["GRD_CAMINHO"]
                        <input asp-for="Caminho" class="form-control" />
                        <span asp-validation-for="Caminho" class="text-danger"></span>
                    </div>

                    <br />


                    <div class="form-group">
                        <div>
                            @Localizer["GRD_TIPO"]
                        </div>
                       
                        <select name="TipoArquivo" asp-for="TipoArquivo" size="6" style="width:200px;">
                            <option value="Log">Arquivo .log</option>
                            <option value="Txt">Arquivo .Txt</option>
                            <option value="Ini">Arquivo .Ini</option>
                            <option value="Json">Arquivo .Json</option>
                             <option value="Xml">Arquivo .Xml</option>
                            <option value="Pasta">Pasta Completa</option>
                        </select>
                        
                        <span asp-validation-for="TipoArquivo" class="text-danger"></span>
                    </div>

                    <br />

                    <div class="form-group">
                        @Localizer["GRD_DATA_MASCARA"]
                        <input asp-for="DataMascara" class="form-control" />
                        <span asp-validation-for="DataMascara" class="text-danger"></span>
                    </div>
                   

                </th>
            </tr>

        </table>
              


        <br />
        <div class="form-group">
            <input type="submit" value="@Localizer["BTN_SALVAR"]" class="btn btn-primary btn-sm" />
            <a class="btn btn-secondary btn-sm" asp-action="Index">@Localizer["BTN_VOLTAR"]</a>
        </div>
        </form>
 </div>




