@model OrionTM_Web.Models.Comando



@{
    ViewData["Title"] = "Comandos";
}

<h2>Comandos > Detalhes</h2>

<div class="col-md-6">
    <hr />

    <table class="table">
        <tr>
            <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>:
                        <input asp-for="Nome" class="form-control" readonly />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>:
                        <input asp-for="Descricao" class="form-control" readonly />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Caminho" class="control-label"></label>:
                    <textarea asp-for="Caminho" id="w3review" name="Caminho" rows="10" cols="170" readonly>
                       </textarea>
                    <span asp-validation-for="Caminho" class="text-danger"></span>
                </div>

                              

            </th>
        </tr>

    </table>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ComandoId" class="btn btn-primary btn-sm">Editar</a>
    <a asp-action="Index" class="btn btn-secondary btn-sm">Voltar</a>
</div>