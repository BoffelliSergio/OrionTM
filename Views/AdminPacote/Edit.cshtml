@model OrionTM_Web.Models.Pacote

@{
    ViewData["Title"] = "Edit";
}

<h2>Pacotes > Editar</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PacoteId" />


            <table class="table">
                <tr>
                    <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        <div class="form-group">
                             <label asp-for="Nome" class="control-label"></label>:
                            <input asp-for="Nome" class="form-control" readonly />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Descricao" class="control-label"></label>:
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </th>


                    <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">

                        <div class="form-group">
                            <label asp-for="Caminho" class="control-label"></label>:
                            <input asp-for="Caminho" class="form-control" />
                            <span asp-validation-for="Caminho" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Versao" class="control-label"></label>:
                            <input asp-for="Versao" class="form-control" />
                            <span asp-validation-for="Versao" class="text-danger"></span>
                        </div>
                       
                    </th>


                    <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">

                        <div class="form-group">
                            <label>Produção?</label>
                            <br />
                            <input type="checkbox" asp-for="Prod" />
                            <span asp-validation-for="Prod" class="text-danger"></span>
                        </div>

                    </th>


                </tr>

            </table>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-warning btn-sm" />
                <a asp-action="Index" class="btn btn-secondary btn-sm">Voltar</a>
            </div>
        </form>
    </div>
</div>

