@model OrionTM_Web.Models.Pacote

@using Microsoft.AspNetCore.Mvc.Localization

@using Microsoft.Extensions.Localization

@inject IViewLocalizer Localizer

@*@Localizer["Senha"]*@

@{
    ViewData["Title"] = @Localizer["TITULO"];
}

<h2>@Localizer["TITULO"]</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PacoteId" />


            <table class="table">
                <tr>
                    <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        <div class="form-group">
                            @Localizer["GRD_NOME"]
                            <input asp-for="Nome" class="form-control" readonly />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Localizer["GRD_DESCRICAO"]
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </th>

                    <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">

                        <div class="form-group">
                            @Localizer["GRD_VERSAO"]
                            <input asp-for="Versao" class="form-control" />
                            <span asp-validation-for="Versao" class="text-danger"></span>
                        </div>
                       
                    </th>


                    <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">

                        <div class="form-group">
                            @Localizer["GRD_PRODUCAO"]
                            <br />
                            <input type="checkbox" asp-for="Prod" />
                            <span asp-validation-for="Prod" class="text-danger"></span>
                        </div>

                    </th>


                </tr>

            </table>

            <div class="form-group">
                <input type="submit" value=@Localizer["BTN_SALVAR"] class="btn btn-warning btn-sm" />
                <a asp-action="Index" class="btn btn-secondary btn-sm">@Localizer["BTN_VOLTAR"]</a>
            </div>
        </form>
    </div>
</div>

