@model OrionTM_Web.Models.Local


@using Microsoft.AspNetCore.Mvc.Localization

@using Microsoft.Extensions.Localization

@inject IViewLocalizer Localizer

@*@Localizer["Senha"]*@

@{
    ViewData["Title"] = @Localizer["TITULO"];
}

<h2> @Localizer["TITULO"]</h2>

<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LocalId" />

            <table class="table">
                <tr>
                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            @Localizer["GRD_CODIGO"]
                            <input asp-for="Codigo" class="form-control" readonly />
                            <span asp-validation-for="Codigo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Localizer["GRD_NOME"]
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Localizer["GRD_LINK"]
                            <select asp-for="LinkId" class="form-control" asp-items="ViewBag.LinkId"></select>
                            <span asp-validation-for="LinkId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Localizer["GRD_ENDERECO"]
                            <input asp-for="Endereco" class="form-control" />
                            <span asp-validation-for="Endereco" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Localizer["GRD_NUMERO"]
                            <input asp-for="Numero" class="form-control" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                        
                    </th>


                <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6">

                        
                        <div class="form-group">
                            @Localizer["GRD_CIDADE"]
                            <input asp-for="Cidade" class="form-control" />
                            <span asp-validation-for="Cidade" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Localizer["GRD_ESTADO"]
                            <input asp-for="Estado" class="form-control" />
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Localizer["GRD_TELEFONE"]
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Localizer["GRD_CEP"]
                            <input asp-for="Cep" class="form-control" />
                            <span asp-validation-for="Cep" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Localizer["GRD_CONTATO"]
                            <input asp-for="Contato" class="form-control" />
                            <span asp-validation-for="Contato" class="text-danger"></span>
                        </div>
                    </th>
                </tr>
                
            </table>
            <div>
                <div class="form-group">
                    <input type="submit" value=" @Localizer["BTN_SALVAR"]" class="btn btn-warning btn-sm" />
                    <a asp-action="Index" class="btn btn-secondary btn-sm"> @Localizer["BTN_VOLTAR"]</a>
                </div>
            </div>
           
        </form>
    </div>
</div>


