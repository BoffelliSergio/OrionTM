@model List<StatusTerminal>


@using Microsoft.AspNetCore.Mvc.Localization

@using Microsoft.Extensions.Localization

@inject IViewLocalizer Localizer

@*@Localizer["Senha"]*@



@{
    ViewData["Title"] = @Localizer["TITULO"];
}


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Localizer["GRD_STATUS"]
            </th>
            <th>
                @Localizer["GRD_TERMINAL"]
            </th>
            <th>
                @Localizer["GRD_LOCAL"]
            </th>
            <th>
                @Localizer["GRD_MODELO"]
            </th>
            <th>
                @Localizer["GRD_IP"]
            </th>
            <th>
                @Localizer["GRD_ATUAL"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entity in Model)
        {
            <tr>
                <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                    @if (@entity.Status == 1)
                    {
                        <img src="~/images/Online.png" alt="Minha Figura">

                    }
                    else
                    {
                        <img src="~/images/Offline.png" alt="Minha Figura">
                    }

                </td>

                <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                    @entity.Codigo
                </td>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @entity.NmLocal
                </td>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @entity.NmModelo
                </td>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @entity.IP
                </td>
                <td class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    @entity.DtAtualizaao
                </td>

            </tr>
        }
    </tbody>
</table>




<script language='javascript'>
   
function teste(){
     window.location.reload();
}

setTimeout(teste,15000);

</script>
