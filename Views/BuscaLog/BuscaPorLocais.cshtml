@model ComandosEnvioViewModel


<div class="container">
    <form asp-action="BuscaPorLocais">
        <h3>Upload de Arquivos por Localidade</h3>
        <table class="table">

            <tr>
                <td>
                    <div><h4>Arquivos</h4></div>
                    <div>
                        <select name="Logs_from" id="multiselect" class="form-control" size="5">
                            @foreach (var item in Model.Log)
                            {
                                <option value="@item.LogId">@item.Nome     -    Tipo =  @item.TipoArquivo / Mascara = @item.DataMascara </option>

                            }
                        </select>
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    <div><h4>Localidades</h4></div>
                    <div>
                        <select name="Locais_from" id="multiselect" class="form-control" size="10" multiple="multiple">
                            @foreach (var item in Model.Locais)
                            {
                                <option value="@item.LocalId">@item.Nome</option>
                            }
                        </select>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-check form-switch">

                        <label>Data Inicio:</label>
                        <input type="date" id="birthday" name="DataInicio" placeholder="dd/mm/yyyy">

                        <label>Data Fim:</label>
                        <input type="date" id="birthday" name="DataFim" placeholder="dd/mm/yyyy">

                    </div>
                </td>
            </tr>


        </table>
        <table>
            <div class="row">
                <div class="col-md-2 offset-md-10">
                    <button type="submit" class="btn btn-warning  btn-sm">Executar</button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">Voltar</a>
                </div>
            </div>
        </table>
    </form>
</div>
