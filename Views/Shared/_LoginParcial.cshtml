@using Microsoft.AspNetCore.Identity

@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization

@inject IViewLocalizer Localizer

@*@Localizer["Senha"]*@
@inject SignInManager<IdentityUser> SignInManager


@if(SignInManager.IsSignedIn(User))
{
        <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
            method="post" class="navbar-light">
            <ul class="nav navbar-nav navbar-left">
            <button type="submit" style="width:auto" class="nav-link btn text-white btn-link py-0">
                    Logout : @User.Identity.Name &nbsp;
                </button>
            </ul>
        </form>
        }
else
{
    <ul class="nav navbar-nav navbar-left">
        <a class="nav-link text-black" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path,Context.Request.QueryString)" style="color:white">Log In</a>
       
     </ul>


}