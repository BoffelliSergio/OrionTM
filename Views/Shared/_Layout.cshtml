<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrionTM_Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrionTM_Web.styles.css" asp-append-version="true" />
</head>


<body>

    @using Microsoft.AspNetCore.Mvc.Localization
    @using Microsoft.Extensions.Localization

    @inject IViewLocalizer Localizer

    @*@Localizer["Senha"]*@


    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  bg-dark border-bottom box-shadow mb-3 ">
                        
            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png"></a>
                      

            <li class="btn-group">
                &nbsp;
                <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    @Localizer["MNU_EXECUTAR"]
                </button>
                <ul class="dropdown-menu">
                    <li> <a class="nav-link text-black" asp-area="" asp-controller="Comandos" asp-action="Index">@Localizer["MNU_COMANDOS"]</a></li>
                    <li> <a class="nav-link text-black" asp-area="" asp-controller="Resets" asp-action="Index">@Localizer["MNU_RESETS"]</a></li>
                    <li>  <a class="nav-link text-black" asp-area="" asp-controller="EnvioPacotes" asp-action="Index">@Localizer["MNU_DOWNLOAD"]</a></li>
                    <li>  <a class="nav-link text-black" asp-area="" asp-controller="BuscaLog" asp-action="Index">@Localizer["MNU_UPLOAD"]</a></li>
                </ul>
             </li>
                           
           
            <li class="btn-group">

                &nbsp;
                <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    @Localizer["MNU_CADASTROS"]
                </button>
                <ul class="dropdown-menu">
                    <li> <a class="nav-link text-black" asp-area="" asp-controller="AdminPacote" asp-action="Index">@Localizer["MNU_DOWNLOAD"]</a>
                    <li> <a class="nav-link text-black" asp-area="" asp-controller="AdminLog" asp-action="Index">@Localizer["MNU_UPLOAD"]</a>
                    <li> <a class="nav-link text-black" asp-area="" asp-controller="AdminComando" asp-action="Index">@Localizer["MNU_COMANDOS"]</a>
                    <li> <a class="nav-link text-black" asp-area="" asp-controller="ListaEnvio" asp-action="Index">@Localizer["MNU_LISTA"]</a> </li>

                    
                    </ul>
            </li>

            &nbsp;
            <a class="btn btn-secondary" asp-area="" asp-controller="StatusTerminal" asp-action="Status">@Localizer["MNU_STATUS"]</a>




            @if (User.IsInRole("Admin"))

            {
               
                <li class="btn-group">
                    &nbsp;
                    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        @Localizer["MNU_CONFIGURACAO"]
                    </button>
                    <ul class="dropdown-menu">
                        <li> <a class="nav-link text-black" asp-area="" asp-controller="AdminLinks" asp-action="Index">@Localizer["MNU_LINKS"]</a></li>
                        <li> <a class="nav-link text-black" asp-area="" asp-controller="AdminLocal" asp-action="Index">@Localizer["MNU_LOCAIS"]</a></li>
                        <li> <a class="nav-link text-black" asp-area="" asp-controller="AdminModelo" asp-action="Index">@Localizer["MNU_MODELOS"]</a>
                        <li> <a class="nav-link text-black" asp-area="" asp-controller="AdminTerminal" asp-action="Index">@Localizer["MNU_TERMINAIS"]</a>
                    </ul>
                </li>

                <li class="btn-group">
                    &nbsp;
                    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        @Localizer["MNU_ADMIN"]
                    </button>
                    <ul class="dropdown-menu">
                        <li> <a class="nav-link text-black" asp-area="" asp-controller="Account" asp-action="Register">@Localizer["MNU_USUARIOS"]</a>
                        <li> <a class="nav-link text-black" asp-area="" asp-controller="AdminLogAuditoria" asp-action="Index">@Localizer["MNU_AUDITORIA"]</a>

                    </ul>
                </li>
                                                                     
            }


            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            @await Html.PartialAsync("_LoginPartial")
               
        </div>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
        
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
        
    <script src="~/js/multiselect.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>


<script type="text/javascript">
    $(document).ready(function () {
        $('#multiselect').multiselect();
    });
</script>
</html>
