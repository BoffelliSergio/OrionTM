@model OrionTM_Web.Models.Modelo

@using Microsoft.AspNetCore.Mvc.Localization

@using Microsoft.Extensions.Localization

@inject IViewLocalizer Localizer

@*@Localizer["Senha"]*@

@{
    ViewData["Title"] = @Localizer["TITULO"];
}

<h2> @Localizer["TITULO"]</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ModeloId" />


            <table class="table">
                <tr>
                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                        <div class="form-group">
                            @Localizer["GRD_NOME"]
                            <input asp-for="Nome" class="form-control" readonly />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Localizer["GRD_DESCRICAO"]
                            <input asp-for="Descricao" class="form-control" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </th>


                    <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6">

                        <div class="form-group">
                            @Localizer["GRD_FABRICANTE"]
                            <input asp-for="Fabricante" class="form-control" />
                            <span asp-validation-for="Fabricante" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @Localizer["GRD_SIST"]
                            <input asp-for="SistemaOperacional" class="form-control" />
                            <span asp-validation-for="SistemaOperacional" class="text-danger"></span>
                        </div>

                    </th>
                </tr>

            </table>

            <div class="form-group">
                <input type="submit" value="   @Localizer["BTN_SALVAR"]" class="btn btn-warning btn-sm" />
                <a asp-action="Index" class="btn btn-secondary btn-sm">   @Localizer["BTN_VOLTAR"]</a>
            </div>
        </form>
    </div>
</div>

