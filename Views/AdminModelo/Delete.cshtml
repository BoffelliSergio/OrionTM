@model OrionTM_Web.Models.Modelo


@{
    ViewData["Title"] = "Delete";
}

<h2>Modelos > Exclir</h2>


<div class="col-md-6">
   
    <hr />
    
    <table class="table">
        <tr>
            <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>:
                    <input asp-for="Nome" class="form-control" readonly />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>:
                    <input asp-for="Descricao" class="form-control" readonly />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </th>


            <th class="col-xs-6 col-sm-6 col-md-6 col-lg-6">

                <div class="form-group">
                    <label asp-for="Fabricante" class="control-label"></label>:
                    <input asp-for="Fabricante" class="form-control" readonly />
                    <span asp-validation-for="Fabricante" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SistemaOperacional" class="control-label"></label>:
                    <input asp-for="SistemaOperacional" class="form-control" readonly />
                    <span asp-validation-for="SistemaOperacional" class="text-danger"></span>
                </div>

            </th>
        </tr>

    </table>


</div>
<h4 class="modal-title">Atenção!</h4>
<div class="modal-body">
    A exclusão deste MODELO acarretará ne esclusão dos TERMINAIS relacionados a este MODELO
    <br />
    Tem certeza que deseja excluir o MODELO:  <strong>@Html.DisplayFor(model => model.Nome) </strong>?
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <input class="btn btn-primary btn-sm btn-danger" type="submit" value="Excluir" />
        <a asp-action="Index" class="btn btn-secondary btn-sm">Voltar</a>
    </div>
}

